{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "IdentityServer4": "Debug"
    }
  },
  "IdentityServer": {
    "IssuerUri": "https://localhost:8300",
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "local-dev",
        "ClientName": "Local Development",
        "ClientSecrets": [
          { "Value": "yoursecretvalue" }
        ],
        "AllowedGrantTypes": [ "client_credentials" ],
        "AllowedScopes": [ "transaction", "account" ]
      },
      {
        "Enabled": true,
        "ClientId": "account_client",
        "ClientName": "Account Client",
        "ClientSecrets": [
          { "Value": "yoursecretvalue" }
        ],
        "AllowedGrantTypes": [ "client_credentials" ],
        "AllowedScopes": [ "transaction" ]
      }
    ],
    "ApiResources": [
      {
        "Name": "account-api",
        "DisplayName": "Account Service",
        "Scopes": [ "account" ]
      },
      {
        "Name": "transaction-api",
        "DisplayName": "Transaction Service",
        "Scopes": [ "transaction" ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "account",
        "DisplayName": "Access to Account API",
        "Description": "Allows access to the account API"
      },
      {
        "Name": "transaction",
        "DisplayName": "Access to Transaction API",
        "Description": "Allows access to the transaction API"
      }
    ]
  },
  "AllowedHosts": "*"
}
