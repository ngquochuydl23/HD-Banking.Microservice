{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000",
    "CorsPolicy": {
      "AllowedOrigins": [ "*" ],
      "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH" ],
      "AllowedHeaders": [ "*" ],
      "ExposedHeaders": [ "*" ],
      "MaxAge": 3600,
      "AllowCredentials": true
    }
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/account/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/account-api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "127.0.0.1",
          "Port": 8100
        }
      ],
      "SwaggerKey": "Accounts",
      "CorsPolicy": "default"
    },
    {
      "UpstreamPathTemplate": "/api/transaction/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/transaction-api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "127.0.0.1",
          "Port": 8200
        }
      ],
      "SwaggerKey": "Transactions",
      "CorsPolicy": "default"
    },
    {
      "UpstreamPathTemplate": "/api/identity/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/identity-api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "127.0.0.1",
          "Port": 8300
        }
      ],
      "SwaggerKey": "Identity",
      "CorsPolicy": "default"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "Accounts",
      "Config": [
        {
          "Name": "Account API",
          "Version": "v1",
          "Url": "http://localhost:8100/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Transactions",
      "Config": [
        {
          "Name": "Transaction API",
          "Version": "v1",
          "Url": "http://localhost:8200/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Identity",
      "Config": [
        {
          "Name": "Identity API",
          "Version": "v1",
          "Url": "http://localhost:8300/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
