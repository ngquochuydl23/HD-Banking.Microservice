{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "IdentityServer4": "Debug"
    }
  },
  "IdentityServer": {
    "IssuerUri": "https://localhost:5001",
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "local-dev",
        "ClientName": "Local Development",
        "ClientSecrets": [
          { "Value": "yoursecretvalue" } // You can hash this when you set it in the IdentityServer
        ],
        "AllowedGrantTypes": [ "client_credentials" ],
        "AllowedScopes": [ "api1", "api2" ] // Ensure to include scopes for both services
      }
    ],
    "ApiResources": [
      {
        "Name": "account-api",
        "DisplayName": "Account Service",
        "Scopes": [ "api1" ] // Define scopes for this API resource
      },
      {
        "Name": "transaction-api",
        "DisplayName": "Transaction Service",
        "Scopes": [ "api2" ] // Define scopes for this API resource
      }
    ],
    "ApiScopes": [
      {
        "Name": "api1",
        "DisplayName": "Access to Account API",
        "Description": "Allows access to the account API"
      },
      {
        "Name": "api2",
        "DisplayName": "Access to Transaction API",
        "Description": "Allows access to the transaction API"
      }
    ]
  },
  "AllowedHosts": "*"
}
